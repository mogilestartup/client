<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
     <LinearLayout
                android:id="@+id/item_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/listview_item_background"
                android:orientation="vertical"
                android:paddingBottom="8dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="12dp" >
            <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5px"
                    android:background="#868990" />    
               <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >
						<TextView
						     android:id="@+id/Category_Postid"
						     android:layout_width="wrap_content"
						     android:layout_height="wrap_content"
						     android:text="" 
						     android:visibility="gone"/>
                        <TextView
                            android:id="@+id/Category_UserName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:text="Title"
                            android:textColor="#868990"
                            android:textSize="20sp" />
                        <TextView
                            android:id="@+id/Category_Postdate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:text="Title"
                            android:textColor="#868990"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
                
                     <LinearLayout
                         android:id="@+id/Category_Star"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_alignParentRight="true"
                         android:layout_marginLeft="12dp"
                         android:gravity="center"
                         android:orientation="horizontal" >
                          <View
                             android:layout_width="0.5px"
                             android:layout_height="fill_parent"
                             android:background="#868990" />
                         <ImageView
                             android:id="@+id/Category_Star_Img"
                             android:layout_width="40dp"
                             android:layout_height="40dp"
                             android:layout_weight="0.71"
                             android:paddingLeft="3dp"
                             android:paddingRight="5dp"
                             android:src="@drawable/star" />

                         <TextView
                             android:id="@+id/Category_Star_text"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:paddingRight="5dp"
                             android:text="99"
                             android:textColor="#815F3D"
                             android:textStyle="bold"
                             android:textSize="20sp" />
                     </LinearLayout>
                 </RelativeLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5px"
                    android:background="#868990" />
                <TextView
                    android:id="@+id/Category_MainText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#868990"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     >
                    
                    <LinearLayout
                        android:id="@+id/Category_Vc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/Category_Vc_Img"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:paddingLeft="3dp"
                            android:paddingRight="5dp"
                            android:src="@drawable/logo_vc" />

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/Detail_Dev"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/Detail_Pm"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/Detail_Dev_Img"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:paddingLeft="3dp"
                            android:paddingRight="5dp"
                            android:src="@drawable/logo_dev" />

                        <TextView
                            android:id="@+id/Detail_Dev_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="5dp"
                            android:text=": 9"
                            android:textColor="#815F3D"
                            android:textSize="12sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/Detail_Ui"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/Detail_Dev"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/Detail_Ui_Img"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:paddingLeft="3dp"
                            android:paddingRight="5dp"
                            android:src="@drawable/logo_ui" />

                        <TextView
                            android:id="@+id/Detail_Ui_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="5dp"
                            android:text=": 9"
                            android:textColor="#815F3D"
                            android:textSize="12sp" />
                    </LinearLayout>
                         <LinearLayout
                        android:id="@+id/Detail_Opn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/Detail_Ui"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/Detail_Opn_Img"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:paddingLeft="3dp"
                            android:paddingRight="5dp"
                            android:src="@drawable/logo_opn" />

                        <TextView
                            android:id="@+id/Detail_Opn_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="5dp"
                            android:text=": 9"
                            android:textColor="#815F3D"
                            android:textSize="12sp" />
                    </LinearLayout>

                         <LinearLayout
                             android:id="@+id/Detail_Pm"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_alignParentTop="true"
                             android:layout_toRightOf="@+id/Category_Vc"
                             android:gravity="center_vertical"
                             android:orientation="horizontal" >

                             <ImageView
                                 android:id="@+id/Detail_Pm_Img"
                                 android:layout_width="25dp"
                                 android:layout_height="25dp"
                                 android:paddingLeft="3dp"
                                 android:paddingRight="5dp"
                                 android:src="@drawable/logo_pm" />
                         </LinearLayout>

                </RelativeLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5px"
                    android:background="#868990" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" 
                    android:orientation="horizontal">
                      <LinearLayout
                        android:id="@+id/Detail_Tag"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal"
                         >

                         <ImageView
                             android:id="@+id/Detail_Tag_Img"
                             android:layout_width="32dp"
                             android:layout_height="26dp"
                             android:paddingLeft="3dp"
                             android:paddingRight="5dp"
                             android:src="@drawable/tags1" />

                        <TextView
                            android:id="@+id/Detail_Tag_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="5dp"
                            android:text=": Social Network, IM"
                            android:textColor="#815F3D"
                            android:textSize="15sp" />
                    </LinearLayout>
                    <View
                        android:layout_width="0.5px"
                    android:layout_height="fill_parent"
                    android:background="#868990" />
                    <LinearLayout
                        android:id="@+id/Detail_Comment"
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal"
                         >

                         <ImageView
                             android:id="@+id/Detail_Comment_Img"
                             android:layout_width="32dp"
                             android:layout_height="26dp"
                             android:paddingLeft="3dp"
                             android:paddingRight="5dp"
                             android:src="@drawable/comment" />

                        <TextView
                            android:id="@+id/Detail_Comment_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="5dp"
                            android:text="99"
                            android:textColor="#815F3D"
                            android:textSize="15sp" />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5px"
                    android:background="#868990" />
            </LinearLayout>

</LinearLayout>
