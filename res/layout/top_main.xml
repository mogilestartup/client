<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:baselineAligned="false"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="#5AC99F"
    android:gravity="center"
    android:orientation="horizontal" >
    <LinearLayout android:id="@+id/id_user"
    android:layout_width="0dp"
    android:layout_height="fill_parent"
    android:gravity="center" 
    android:orientation="vertical"
    android:layout_weight="0.2">
        <ImageButton
           android:id="@+id/id_button_user"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="#00000000"
           android:contentDescription="@string/app_name"
           android:gravity="center"
           android:src="@drawable/button_user_big" />
    </LinearLayout>
    <LinearLayout android:id="@+id/id_title"
    android:layout_width="0dp"
    android:layout_height="fill_parent"
    android:gravity="center" 
    android:orientation="vertical"
    android:layout_weight="1">
        <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:text="@string/title"
           android:textColor="#ffffff"
           android:textSize="25sp"
           android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout android:id="@+id/id_msg"
    android:layout_width="0dp"
    android:layout_height="fill_parent"
    android:gravity="center" 
    android:orientation="vertical"
    android:layout_weight="0.2">
       <ImageButton
           android:id="@+id/id_button_mail"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="#00000000"
           android:contentDescription="@string/app_name"
           android:gravity="center"
           android:src="@drawable/button_mail_big" />
    </LinearLayout>
</LinearLayout>
